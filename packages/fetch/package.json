{
  "name": "@zap-studio/fetch",
  "version": "0.3.1",
  "type": "module",
  "license": "MIT",
  "private": false,
  "homepage": "https://www.zapstudio.dev/packages/fetch",
  "repository": {
    "type": "git",
    "url": "https://github.com/zap-studio/monorepo.git",
    "directory": "packages/fetch"
  },
  "description": "A type-safe fetch wrapper for HTTP requests with runtime schema validation.",
  "keywords": [
    "fetch",
    "type-safe",
    "validation",
    "schema",
    "typescript",
    "http",
    "api",
    "zod",
    "valibot",
    "arktype",
    "runtime validation",
    "error handling",
    "standard schema",
    "request",
    "response"
  ],
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist",
    "CHANGELOG.md",
    "LICENSE.md",
    "README.md"
  ],
  "scripts": {
    "build": "tsdown --config tsdown.config.ts",
    "check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest --watch"
  },
  "dependencies": {
    "@standard-schema/spec": "catalog:base"
  },
  "devDependencies": {
    "@types/node": "catalog:types",
    "@vitest/coverage-v8": "catalog:testing",
    "@zap-studio/tsdown-config": "workspace:*",
    "@zap-studio/typescript-config": "workspace:*",
    "@zap-studio/vitest-config": "workspace:*",
    "arktype": "catalog:base",
    "tsdown": "catalog:base",
    "typescript": "catalog:base",
    "valibot": "catalog:base",
    "vitest": "catalog:testing",
    "zod": "catalog:base"
  },
  "exports": {
    ".": "./dist/index.mjs",
    "./constants": "./dist/constants.mjs",
    "./errors": "./dist/errors.mjs",
    "./types": "./dist/types.mjs",
    "./utils": "./dist/utils.mjs",
    "./validator": "./dist/validator.mjs",
    "./package.json": "./package.json"
  },
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.mts"
}
