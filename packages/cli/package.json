{
  "name": "@zap-ts/cli",
  "description": "The CLI that makes Zap.ts development easier.",
  "version": "1.0.0",
  "type": "module",
  "private": false,
  "files": [
    "dist/**/*",
    "README.md",
    "dist"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "exports": {
    ".": "./dist/index.js",
    "./package.json": "./package.json"
  },
  "publishConfig": {
    "access": "public"
  },
  "homepage": "https://zap-ts.zapstudio.dev",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/zap-studio/zap.ts/issues"
  },
  "funding": {
    "type": "individual",
    "url": "https://github.com/sponsors/zap-studio"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zap-studio/zap.ts"
  },
  "bin": {
    "zap": "./dist/index.js"
  },
  "scripts": {
    "build": "tsdown --config tsdown.config.ts",
    "lint": "ultracite check",
    "format": "ultracite fix",
    "postbuild": "typedoc --entryPointStrategy expand src"
  },
  "dependencies": {
    "@zap-ts/architecture": "^1.0.3",
    "chalk": "^5.6.2",
    "commander": "^14.0.1",
    "execa": "^9.6.0",
    "figlet": "^1.9.3",
    "fs-extra": "^11.3.2",
    "inquirer": "^12.9.6",
    "ora": "^9.0.0",
    "ts-morph": "^27.0.0",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@zap-ts/config": "workspace:*",
    "@types/figlet": "^1.7.0",
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^9.0.9",
    "@types/node": "^24.5.2",
    "tsdown": "^0.15.4",
    "typedoc": "^0.28.13",
    "typescript": "^5.9.2"
  },
  "peerDependencies": {
    "typescript": "^5.8.3"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,jsonc,css,scss}": [
      "ultracite fix"
    ]
  },
  "types": "./dist/index.d.ts"
}
