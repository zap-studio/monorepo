{
  "name": "create-zap-app",
  "description": "A CLI to bootstrap a Next.js boilerplate with plugins customization.",
  "author": "Alexandre Trotel",
  "keywords": [
    "next.js",
    "cli",
    "typescript",
    "plugins",
    "oRPC",
    "react",
    "tailwindcss",
    "drizzle",
    "pnpm",
    "npm",
    "yarn",
    "bun",
    "boilerplate",
    "starter-kit"
  ],
  "version": "1.4.12",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.cts",
  "type": "module",
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "homepage": "https://zap-ts.zapstudio.dev",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/zap-studio/zap.ts/issues"
  },
  "funding": {
    "type": "individual",
    "url": "https://github.com/sponsors/zap-studio"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zap-studio/zap.ts"
  },
  "bin": {
    "create-zap-app": "./dist/index.js",
    "zap": "./dist/index.js"
  },
  "scripts": {
    "build": "tsdown --config tsdown.config.ts",
    "lint": "ultracite lint",
    "format": "ultracite format",
    "postbuild": "typedoc --entryPointStrategy expand src"
  },
  "dependencies": {
    "@zap-ts/architecture": "^1.0.3",
    "chalk": "^5.6.0",
    "commander": "^14.0.0",
    "execa": "^9.6.0",
    "figlet": "^1.8.2",
    "fs-extra": "^11.3.1",
    "inquirer": "^12.9.4",
    "ora": "^9.0.0",
    "ts-morph": "^26.0.0",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@types/figlet": "^1.7.0",
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^9.0.9",
    "@types/node": "^24.3.0",
    "tsdown": "^0.14.2",
    "typedoc": "^0.28.11",
    "typescript": "^5.9.2"
  },
  "peerDependencies": {
    "typescript": "^5.8.3"
  },
  "files": [
    "dist/**/*",
    "README.md"
  ],
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,jsonc,css,scss}": [
      "ultracite format"
    ]
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./package.json": "./package.json"
  }
}
