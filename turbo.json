{
	"$schema": "https://turbo.build/schema.json",
	"globalDependencies": ["**/.env", "apps/**/*"],
	"globalEnv": ["*"],
	"tasks": {
		"build": {
			"cache": false,
			"dependsOn": ["^build"],
			"outputs": [".next/**", "!.next/cache/**", "dist/**", ".vitepress/**"]
		},
		"lint": {
			"cache": false
		},
		"lint:fix": {
			"cache": false
		},
		"dev": {
			"cache": false,
			"persistent": true
		},
		"clean": {
			"cache": false
		},
		"format": {
			"cache": false
		}
	}
}
