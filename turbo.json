{
	"$schema": "https://turbo.build/schema.json",
	"ui": "tui",
	"globalDependencies": ["tsconfig.json", ".env*", "package.json"],
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"inputs": [
				"$TURBO_DEFAULT$",
				".env*",
				"!**/*.test.{ts,tsx,js,jsx}",
				"!**/*.spec.{ts,tsx,js,jsx}"
			],
			"outputs": [".next/**", "!.next/cache/**", "dist/**"]
		},
		"dev": {
			"cache": false,
			"persistent": true
		}
	}
}
