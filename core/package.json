    "server-only": "^0.0.1",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.3.1",
    "tailwindcss-animate": "^1.0.7",
    "vaul": "^1.1.2",
    "web-push": "^3.6.7",
    "zod": "^4.1.5",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.5",
    "@react-email/preview-server": "^4.2.8",
    "@tailwindcss/postcss": "^4.1.12",
    "@types/mdx": "^2.0.13",
    "@types/node": "^24.3.0",
    "@types/pg": "^8.15.5",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "@types/react-syntax-highlighter": "^15.5.13",
    "@types/serialize-javascript": "^5.0.4",
    "@types/web-push": "^3.6.4",
    "cross-env": "^10.0.0",
    "drizzle-kit": "^0.31.4",
    "husky": "^9.1.7",
    "react-scan": "^0.4.3",
    "tailwindcss": "^4.1.12",
    "typescript": "^5.9.2",
    "ultracite": "^5.2.10"
  },
  "publishConfig": {
    "access": "public"
  }
}
